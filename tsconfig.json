{
  "compilerOptions": {
    "declaration": true,
    "strict": false,
    "lib": ["es6"],
    "outDir": "./",
    "declarationDir": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": false
  },
  "typeRoots" : ["./@types", "./node_modules"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}